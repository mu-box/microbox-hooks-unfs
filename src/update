#!/usr/bin/env ruby

# hookit is installed as a bundled app, so we need bundler to load it for us
$:.unshift  '/opt/gomicro/hookit/vendor/bundle'
require 'bundler/setup'

# load hookit/setup to bootstrap hookit and import the dsl
require 'hookit/setup'

include Hooky::Unfs

# Setup
converged_config = converge( Hooky::Unfs::CONFIG_DEFAULTS, payload[:config] || {} )

local_md5 = execute "local md5" do
  command "cat /var/microbox/hooks.md5"
  not_if { ! ::File.exists? "/var/microbox/hooks.md5" }
end

aws_md5 = execute "aws md5" do
  command "curl -f -k https://s3.amazonaws.com/tools.microbox.cloud/hooks/unfs-#{converged_config[:hook_ref]}.md5"
end

if local_md5 != aws_md5
  execute "update hooks" do
    command "curl \
    -f \
    -k \
    https://s3.amazonaws.com/tools.microbox.cloud/hooks/unfs-#{converged_config[:hook_ref]}.tgz \
      | tar -xz -C /opt/microbox/hooks && \
  curl \
    -f \
    -k \
    -o /var/microbox/hooks.md5 \
    https://s3.amazonaws.com/tools.microbox.cloud/hooks/unfs-#{converged_config[:hook_ref]}.md5"
  end
end
